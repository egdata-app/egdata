{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["node"],
    "lib": ["ESNext", "DOM", "WebWorker"]
  },
  "include": ["src", "global.d.ts", "*.config.ts"]
}
